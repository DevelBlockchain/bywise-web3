{
  "name": "@bywise/web3",
  "version": "1.0.12",
  "description": "Web3 connector of Bywise",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "nodemon --watch 'src/' --exec 'ts-node src/dev.ts' -e ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "test": "jest --watch --verbose false --config jestconfig.json",
    "pub": "tsc && npm publish --access public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DevelBlockchain/bywise-web3.git"
  },
  "keywords": [
    "web3",
    "bywise",
    "blockchain"
  ],
  "author": "Devel Blockchain <contact@develblockchain.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/DevelBlockchain/bywise-web3/issues"
  },
  "homepage": "https://github.com/DevelBlockchain/bywise-web3#readme",
  "devDependencies": {
    "@types/crypto-js": "^4.2.2",
    "@types/jest": "^29.5.12",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "crypto-js": "^4.2.0",
    "ethers": "^6.13.1",
    "randomstring": "^1.3.0",
    "web3-validator": "^2.0.5"
  }
}
